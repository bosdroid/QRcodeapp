<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_border"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/defaultDpMargin"
        >

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/sn_item_checkbox"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/whatsapp"
            android:id="@+id/sn_item_logo"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/eightDpMargin"
            android:layout_marginStart="@dimen/eightDpMargin"
            >
           <com.google.android.material.textview.MaterialTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Visit us online"
               android:textSize="@dimen/largeText"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:id="@+id/sn_item_heading"
               />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.your-url.com"
                android:textSize="@dimen/mediumText"
                android:layout_marginTop="@dimen/defaultDpMargin"
                android:id="@+id/sn_item_tagline"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/sn_item_edit_icon"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Icon"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>