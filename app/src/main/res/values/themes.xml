<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRGenerator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_positive_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomRating" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="primaryPositiveStyle">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/primary_positive_color</item>
    </style>

    <style name="secondaryPositiveStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/secondary_positive_color</item>
    </style>

    <style name="primaryNegativeStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondary_positive_color</item>
    </style>

</resources>